- @title = "#{@team.league.short_name}: #{@team.name}"
%h1= link_to @team.name, @team.league

#team_button_container
  = render :partial => 'download_link', :locals => {:team => @team}
  = render :partial => 'customize_link', :locals => {:team => @team}

%table
  %tr
    %th Number
    %th First name
    %th Last name
    %th Position
  - @team.players.each do |player|
    %tr
      %td= player.number
      %td= player.first_name
      %td= player.last_name
      %td= player.position
