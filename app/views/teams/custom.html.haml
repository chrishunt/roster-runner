- @title = "Custom Team Roster"
%h1= "Custom Roster"

#custom_roster_form_container
  = form_tag :action => "custom" do
    #team_name_label.float_left
      %p= "Team Name"
    .float_right
      %p.description= "Example:"
      %p.description= "Seattle Warriors"
    .clear
    = text_field_tag :custom_team_name, @team_name

    #csv_area_label.float_left
      %p= "CSV Team Roster"
    .float_right
      %p.description= "Example:"
      %p.description= "2,QB,Richard,Bartel"
      %p.description= "11,WR,Brandon,LaFell"
    .clear
    = text_area_tag :csv_text_area, @csv

    %br
    = submit_tag "Create Roster"
