- title "Teams"

%table
  %tr
    %th League
    %th Name
    %th Players
    %th Code
  - for team in @teams
    %tr
      %td= link_to team.league.name, team.league
      %td= link_to team.name, team
      %td= team.players.size
      %td= link_to 'Download', code_path(team)
      /%td= link_to 'Edit', edit_team_path(team)
      /%td= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Team", new_team_path(team)
